<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/serviceRequestDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_request_detail_title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/requestStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_status"
        app:layout_constraintTop_toBottomOf="@id/serviceRequestDetailTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/requestDescriptionDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/request_description_detail"
        app:layout_constraintTop_toBottomOf="@id/requestStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
